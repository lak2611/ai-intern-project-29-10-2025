# Language Model
# Provide either GOOGLE_API_KEY (preferred for Gemini) or LLM_API_KEY
GOOGLE_API_KEY=
LLM_API_KEY=

# Optional: override the default model (defaults to "gemini-2.5-flash")
LLM_MODEL=gemini-2.5-flash

# Upload configuration
# Maximum upload size in bytes (default: 20 MB)
UPLOAD_MAX_BYTES=20971520
NEXT_PUBLIC_UPLOAD_MAX_BYTES=20971520

# Directory for storing uploaded files (default: ./uploads)
UPLOADS_DIR=uploads

# Prisma (optional)
# If you switch datasource url in prisma/schema.prisma to env("DATABASE_URL"),
# uncomment and use the following line:
# DATABASE_URL="file:./prisma/prisma/dev.db"

# Node environment (optional)
# NODE_ENV=development
