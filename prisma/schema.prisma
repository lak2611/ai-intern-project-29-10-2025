generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./prisma/dev.db"
}

model Session {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resources Resource[]
  messages  Message[]
}


model Resource {
  id           String   @id @default(cuid())
  sessionId    String
  originalName String
  storedPath   String   @unique
  mimeType     String
  sizeBytes    Int
  createdAt    DateTime @default(now())

  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // "user" | "assistant" | "system"
  content   String
  metadata  Json?    // Store any relevant metadata (CSV references, tool calls, etc.)
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
}


